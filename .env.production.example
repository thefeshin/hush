# HUSH Vault Production Configuration
# Copy this to .env for production deployments
#
# WARNING: Never commit .env to version control!

# ============================================
# GENERATED SECRETS (set by ./hush deploy)
# ============================================
# These are generated automatically - DO NOT SET MANUALLY
AUTH_HASH=
KDF_SALT=
JWT_SECRET=

# ============================================
# SECURITY POLICY (set by CLI prompts)
# ============================================
MAX_AUTH_FAILURES=5
FAILURE_MODE=ip_temp
IP_BLOCK_MINUTES=60
PANIC_MODE=false
PERSIST_VAULT=false

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://hush:hush@postgres:5432/hush

# ============================================
# APPLICATION
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Use JSON logging for production (log aggregation)
LOG_FORMAT=json

# JWT token expiration (seconds) - 24 hours default
JWT_EXPIRATION=86400

# ============================================
# OPTIONAL: External Monitoring
# ============================================
# SENTRY_DSN=
# METRICS_ENABLED=false
