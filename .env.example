# HUSH Vault Configuration
# Copy this to .env and run ./hush deploy to generate secrets

# Authentication (generated by CLI - DO NOT SET MANUALLY)
AUTH_HASH=
KDF_SALT=
JWT_SECRET=

# Security Policy (set by CLI prompts)
MAX_AUTH_FAILURES=5
FAILURE_MODE=ip_temp
IP_BLOCK_MINUTES=60
PANIC_MODE=false
PERSIST_VAULT=false

# Database
DATABASE_URL=postgresql://hush:hush@postgres:5432/hush

# Application
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
